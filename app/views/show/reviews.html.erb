<div class="table__wrapper">
  <div class="table">
    <div class="row__head reviews">
      <div class="row__item">Клиент</div>
      <div class="row__item">Изделие</div>
      <div class="row__item">Дата отзыва</div>
      <div class="row__item">Оценка</div>
      <div class="row__item">Комментарий</div>
    </div>
    <% @reviews.each do |review|%>
      <div class="row reviews">
        <div class="row__item"><%= review['client'] %></div>
        <div class="row__item"><%= review['cake'] %></div>
        <div class="row__item"><%= review['date'] %></div>
        <div class="row__item"><%= review['rating'] %></div>
        <div class="row__item"><%= review['comment'] %></div>
      </div>
    <% end %>
  </div>
  <%= button_to "Вернуться", root_path, method: "get", class: "sweet_button" %>
</div>
